{
  "dataset_reader": {
    "type": "interleaving",
    "readers": {
      "writingprompts-interleaved": {
        "type": "writingprompts-interleaved",
        "generator_model_name": "facebook/bart-base",
        "generator_max_length": 128,
        "encoder_max_length": 128,
        "lazy": true
      },
      "wikiplots-interleaved": {
        "type": "wikiplots-interleaved",
        "generator_model_name": "facebook/bart-base",
        "generator_max_length": 128,
        "encoder_max_length": 128,
        "lazy": true
      }
    }
  },
  "train_data_path": "{\"wikiplots-interleaved\": \"wikiplots_dummy/train\", \"writingprompts-interleaved\": \"writingprompts_dummy/train\"}",
  "validation_data_path": "{\"wikiplots-interleaved\": \"wikiplots_dummy/validation\", \"writingprompts-interleaved\": \"writingprompts_dummy/validation\"}",
  "data_loader": {
    "batch_size": 16,
    "batches_per_epoch": 1000
  },
  "validation_data_loader": {
    "batch_size": 16,
    "batches_per_epoch": 100
  },
  "model": {
    "type": "bart-fragments",
     "transformer_model_name": "facebook/bart-large"
  },
  "trainer": {
    "type": "deepspeed",
    "use_amp": false,
    "optimizer": {
      "type": "adam",
      "lr": 1e-03,
      "eps": 1e-04
    },
    "deepspeed_config": {
      "optimizer": {
        "params": {
          "lr": 1e-03,
          "eps": 1e-04,
          "weight_decay": 0.0
        },
        "type": "Adam"
      },
      "gradient_clipping": 1.0,
      "amp": {
        "enabled": false
      },
      "fp16": {
        "enabled": true
      },
      "zero_optimization": {
        "stage": 2,
        "allgather_partitions": true,
        "allgather_bucket_size": 50000000,
        "overlap_comm": true,
        "reduce_scatter": true,
        "reduce_bucket_size": 50000000,
        "contiguous_gradients" : true,
        "cpu_offload": true
      },
      "activation_checkpointing": {
        "partition_activations": true,
        "cpu_checkpointing": true,
        "contiguous_memory_optimization": true,
        "number_checkpoints": null,
        "synchronize_checkpoint_boundary": false,
        "profile": true
      },
      "fp32_allreduce": true
    },
    "num_epochs": 5,
    "patience": 2,
    "num_gradient_accumulation_steps": 8,
    "checkpointer": {
      "num_serialized_models_to_keep": 2
    }
  },
  "distributed": {
    "cuda_devices": [
      0,
      1
    ]
  }
}