{
  "dataset_reader": {
    "type": "interleaving",
    "readers": {
      "writingprompts-interleaved": {
        "type": "writingprompts-interleaved",
        "lazy": true,
        "encoder_model_name": "bert-base-cased",
        "generator_model_name": "bert-base-cased",
        "generator_max_length": 256
      }
    }
  },
  "train_data_path": "{ \"writingprompts-interleaved\": \"writingprompts_dummy_4_label_4_step_4/train\"}",
  "validation_data_path": "{ \"writingprompts-interleaved\": \"writingprompts_dummy_4_label_4_step_4/validation\"}",
  "model": {
    "type": "sbert-disc-fragments"
  },
  "data_loader": {
    "batch_size": 16,
    "batches_per_epoch": 20000
  },
  "validation_data_loader": {
    "batch_size": 16,
    "batches_per_epoch": 2000
  },
  "trainer": {
    "type": "deepspeed",
    "use_amp": false,
    "optimizer": {
      "type": "adam",
        "lr": 1e-05,
        "eps": 1e-06
    },
    "deepspeed_config": {
      "optimizer": {
        "params": {
          "lr": 1e-05,
          "eps": 1e-06
        },
        "type": "Adam"
      },
      "gradient_clipping": 1.0,
      "amp": {
        "enabled": false
      },
      "fp16": {
        "enabled": true
      },
      "zero_optimization": {
        "stage": 2,
        "allgather_partitions": true,
        "overlap_comm": true,
        "reduce_scatter": true,
        "reduce_bucket_size": 15000000,
        "allgather_bucket_size": 15000000,
        "contiguous_gradients" : true,
        "cpu_offload": true
      },
     "fp32_allreduce": false
    },
    "num_epochs": 5,
    "patience": 2,
    "num_gradient_accumulation_steps": 2,
    "checkpointer": {
      "num_serialized_models_to_keep": 1
    }
  },
  "distributed": {
    "cuda_devices": [
      0,
      1
    ]
  }
}